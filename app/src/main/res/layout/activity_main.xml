<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF_000000">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tab_border_draw_item_background="false"
        app:tab_border_radius_size="45dp"
        app:tab_border_solid_color="@color/color_F5F6FA_0F1012"
        app:tab_border_stroke_color="@color/color_F5F6FA_0F1012"
        app:tab_border_stroke_width="1dp"
        app:tab_deselect_color="@color/color_8C8C8E_999999"
        app:tab_draw_border="true"
        app:tab_enable_gradient_color="true"
        app:tab_indicator_color="@color/color_000000_White"
        app:tab_indicator_drawable="@drawable/main_indicator_f5f6fa_radius_20"
        app:tab_indicator_enable_flow="true"
        app:tab_indicator_height_offset="-6dp"
        app:tab_indicator_style="STYLE_CENTER"
        app:tab_indicator_width_offset="-6dp"
        app:tab_item_is_equ_width="true"
        app:tab_select_color="@color/color_FFFFFF_000000"
        tools:tab_default_index="0">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/main_tab_style"
            android:text="@string/main_tab_home" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/main_tab_style"
            android:text="@string/main_tab_found" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/main_tab_style"
            android:text="@string/main_tab_map" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/main_tab_style"
            android:text="@string/main_tab_mine" />

    </com.angcyo.tablayout.DslTabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>