<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="app_base_toolbar">
        <!--左侧图标-->
        <attr name="leftIcon" format="reference" />
        <attr name="leftIconVisible" format="boolean" />
        <attr name="leftIconAppearance" format="reference" />

        <!--标题栏-->
        <attr name="title" format="string" />
        <attr name="titleAppearance" format="reference" />

        <!--左侧图标-->
        <attr name="rightIcon" format="reference" />
        <attr name="rightIconVisible" format="boolean" />
        <attr name="rightIconAppearance" format="reference" />

    </declare-styleable>
    <!--toolbar 左侧图标风格-->
    <declare-styleable name="leftIconAppearance">
        <attr name="leftIconSize" format="dimension" />
        <attr name="leftIconStartPadding" format="dimension" />
        <attr name="leftIconEndPadding" format="dimension" />
        <attr name="leftIconTopPadding" format="dimension" />
        <attr name="leftIconBottomPadding" format="dimension" />
    </declare-styleable>
    <!--toolbar 标题风格-->
    <declare-styleable name="titleAppearance">
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="dimension" />
    </declare-styleable>
    <!--toolbar 左侧图标风格-->
    <declare-styleable name="rightIconAppearance">
        <attr name="rightIconSize" format="dimension" />
        <attr name="rightIconStartPadding" format="dimension" />
        <attr name="rightIconEndPadding" format="dimension" />
        <attr name="rightIconTopPadding" format="dimension" />
        <attr name="rightIconBottomPadding" format="dimension" />
    </declare-styleable>
</resources>